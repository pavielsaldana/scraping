{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "streamlit_app.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "pip3 install --user -r requirements.txt; pip3 install --user streamlit playwright; playwright install chromium; echo '✅ Packages installed and Requirements met'",
  "postCreateCommand": "playwright install chromium && echo '✅ Playwright dependencies and browsers installed'",
  "postAttachCommand": {
    "server": "streamlit run streamlit_app.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ],
  "remoteEnv": {
    "PLAYWRIGHT_BROWSERS_PATH": "/home/appuser/.cache/ms-playwright"
  }
}